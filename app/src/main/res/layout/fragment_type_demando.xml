<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andras.esperantoapp.ui.ScreenTypeDemando"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="#ffffffff"
    android:windowActionBar="false">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:id="@+id/linearLayout"
        android:layout_weight="0.4"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/titlePart3"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentLeft="true"
                android:textColor="#ff000000"
                android:gravity="center" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8">

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"></View>

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/textViewPart3"
                android:layout_gravity="center_vertical"
                android:layout_weight="0.60"
                android:gravity="center"/>

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.20"></View>

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:weightSum="1" >

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"></View>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:id="@+id/imageButtonPart3"
                android:layout_weight="0.50"
                android:background="#ffffffff"
                android:src="@drawable/listen_selector" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:weightSum="1" >

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"></View>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:clickable="false"
                android:layout_gravity="center"
                android:layout_weight="0.50"
                android:id="@+id/buttonPart3_1"
                android:background="@drawable/green_button_selector"
                android:textColor="#ffffffff"
                android:textSize="22dp"
                android:layout_marginTop="10dp"
                android:text="Jes" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:weightSum="1" >

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"></View>

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:clickable="false"
                android:layout_gravity="center"
                android:layout_weight="0.50"
                android:id="@+id/buttonPart3_2"
                android:background="@drawable/red_button_selector"
                android:textColor="#ffffffff"
                android:textSize="22dp"
                android:layout_marginTop="10dp"
                android:text="Ne" />


        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="0.25"
            android:weightSum="1" >

            <View
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.25"></View>

            <ImageButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/continueButton3"
                android:layout_weight="0.50"
                android:layout_gravity="center"
                android:src="@drawable/lesson_continue_selector"
                android:background="#ffffffff" />


        </LinearLayout>





    </LinearLayout>


</LinearLayout>
